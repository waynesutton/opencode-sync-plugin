{
  "name": "opencode-sync-plugin",
  "version": "0.2.6",
  "description": "Sync your OpenCode sessions to the cloud",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "opencode-sync": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts src/config.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts src/config.ts --format esm --dts --watch"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "opencode",
    "opencode-plugin",
    "ai",
    "sync",
    "sessions",
    "convex"
  ],
  "author": "waynesutton",
  "repository": {
    "type": "git",
    "url": "https://github.com/waynesutton/opencode-sync-plugin"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@opencode-ai/plugin": {
      "optional": true
    }
  }
}
